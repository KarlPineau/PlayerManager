{# src/PM/HelpBundle/Resources/views/HelpText/view.html.twig #}
 
{% extends "PMHelpBundle:HelpText:layoutAdmin.html.twig" %}

{% block title %}
    {{ helptext.entity }} - {{ parent() }}
{% endblock %}
    
{% block h1 %}
    {{ helptext.entity }} :
{% endblock %}
    
{% block h1_extend %}
    <a class="btn btn-lg btn-primary" href="{{ path('pm_helptext_administration_edit', {'id': helptext.id}) }}" >Modifier</a>
    <a class="btn btn-lg btn-danger main-JS-delete" href="{{ path('pm_helptext_administration_delete', {'id': helptext.id}) }}" >Supprimer</a>
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active">{{helptext.entity}}</li>
    <li class="active">Voir</li>
{% endblock %} 

{% block PM_body %}
<div class="row">
    <section id="content" class="col-lg-12">
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="alert alert-success">
                {{ flashMessage }}
            </div>
        {% endfor %}
        
        <h2>{{helptext.title}}</h2>
        <div class="well">
            {{ helptext.text|raw }}
        </div>
    </section>
</div>
{% endblock %}