{# src/PM/HelpBundle/Resources/views/HelpText/register_content.html.twig #}

<form class="form-horizontal" method="post" {{ form_enctype(form) }} role="form">
    {% if not form.vars.valid %}
    <div class="alert alert-error">
        <strong>Votre formulaire contient les erreurs suivantes :</strong>
        {{ form_errors(form) }}
        {{ form_errors(form.title) }}
        {{ form_errors(form.text) }}
        {{ form_errors(form.entity) }}
    </div>
    <br />
    {% endif %}

    <fieldset>
        <legend>Texte d'aide :</legend>

        <div class="form-group">
            {{ form_label(form.title, "Titre :", {'label_attr': {'class': 'col-md-3 control-label'}}) }}
            <div class="col-md-9">
                {{ form_widget(form.title, {'attr': {'placeholder': 'Titre de votre texte', 'class': 'form-control'}}) }}
            </div>
        </div>
                   
        <div class="form-group">
            <div class="col-md-3 control-label">
                <span class="glyphicon glyphicon-question-sign" style="cursor: pointer;" data-content="Description de l'intérêt de la caractéristique à destination des joueurs." data-toggle="popover" data-container="body" data-original-title="Description" ></span>
                {{ form_label(form.text, "Texte :", {'label_attr': {'class': 'control-label'}}) }}
            </div>
            <div class="col-md-9">
                {{ form_widget(form.text, {'attr': {'class': 'form-control', 'rows': '9'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.entity, "Nom de l'entité commentée :", {'label_attr': {'class': 'col-md-3 control-label'}}) }}
            <div class="col-md-9">
                {{ form_widget(form.entity, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </fieldset>
    {{ form_rest(form) }}
    <div class="text-center"><input type="submit" class="btn btn-default" /></div>
</form>