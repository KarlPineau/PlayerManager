{# src/PM/ImportationBundle/Resources/views/Document/index.html.twig #}
 
{% extends "PMImportationBundle:Document:layoutAdmin.html.twig" %}

{% block title %}
    Accueil - {{ parent() }}
{% endblock %} 
    
{% block h1 %}
    Gestion des Documents :
{% endblock %}
    
{% block h1_extend %}
    <a class="btn btn-lg btn-success" href="{{ path('pm_document_administration_insert') }}" >Ajouter</a>
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active">Accueil</li>
{% endblock %}    
    
{% block PM_body %}
<div class="row">
    <section class="col-lg-12">
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="alert col-lg-7 alert-success">
                {{ flashMessage }}
            </div>
        {% endfor %}
        
        {{ render(controller('PMImportationBundle:Document:list')) }}
    </section>
</div>
{% endblock %}