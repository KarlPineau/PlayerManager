{# src/PM/CharacterBundle/Resources/views/DiceType/register_content.html.twig #}

<form class="form-horizontal" method="post" {{ form_enctype(form) }} role="form">
    {% if not form.vars.valid %}
    <div class="alert alert-error">
        <strong>Votre formulaire contient les erreurs suivantes :</strong>
        {{ form_errors(form) }}
        {{ form_errors(form.dice) }}
    </div>
    <br />
    {% endif %}

    <fieldset>
        <legend>Caract√©ristique :</legend>

        <div class="form-group">
            {{ form_label(form.dice, "Nombre de faces :", {'label_attr': {'class': 'col-md-3 control-label'}}) }}
            <div class="col-md-9">
                {{ form_widget(form.dice, {'attr': {'placeholder': '', 'class': 'form-control'}}) }}
            </div>
        </div>
    </fieldset>
    {{ form_rest(form) }}
    <div class="text-center"><input type="submit" class="btn btn-default" /></div>
</form>