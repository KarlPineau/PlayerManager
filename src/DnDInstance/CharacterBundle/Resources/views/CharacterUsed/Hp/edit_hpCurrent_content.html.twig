{# src/DnDInstance/CharacterBundle/Resources/views/CharacterUsed/register_content.html.twig #}

<form class="form-horizontal" method="post" {{ form_enctype(form) }} role="form">
    {% if not form.vars.valid %}
    <div class="alert alert-error">
        <strong>Votre formulaire contient les erreurs suivantes :</strong>
        {{ form_errors(form.hpCurrentAdd) }}
    </div>
    <br />
    {% endif %}

    <fieldset>
        <legend>Points de Vie de {{characterUsed.name}} :</legend>

        <p class="text-center"><strong>Combien souhaitez-vous ajouter/retirer de points de vie Ã  votre personnage ?</strong></p>
        <div class="form-group">
            {{ form_label(form.hpCurrentAdd, "Points de vie :", {'label_attr': {'class': 'col-md-3 control-label'}}) }}
            <div class="col-md-3">
                {{ form_widget(form.hpCurrentAdd, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </fieldset>
    {{ form_rest(form) }}
    <div class="text-center"><input type="submit" class="btn btn-default" /></div>
</form>