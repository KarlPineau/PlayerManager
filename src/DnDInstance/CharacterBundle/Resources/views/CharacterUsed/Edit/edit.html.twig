{# src/DnDInstance/CharacterBundle/Resources/views/CharacterUsed/register.html.twig #}
 
{% extends "DnDInstanceCharacterBundle:CharacterUsed:layout.html.twig" %}

{% block title %}
    Edition - {{ parent() }}
{% endblock %}
    
{% block h1 %}
    Edition :
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    {% if characterUsed.name != null %}<li><a href="{{ path('dndinstance_characterused_characterused_view', {'slug': characterUsed.slug}) }}">{{characterUsed.name}}</a></li>{% endif %}
    <li class="active">Edition</li>
{% endblock %} 

{% block PM_body %}
<div class="row">
    <section id="content" class="col-sm-8">
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="alert alert-success">
                {{ flashMessage }}
            </div>
        {% endfor %}
        
        <div class="well">
            {% include "DnDInstanceCharacterBundle:CharacterUsed:Edit/edit_content.html.twig" %}
        </div>
    </section>
    <aside class="col-sm-4">
        <div class="well">
            <h3>Pimp ton Perso</h3>
            <p>
                Personnalise sur cette page ton personnage : race, classes, role play ...
            </p>
        </div>
        <div class="well">
            <h3>Aide et documentation</h3>
            <p>Pour plus d'information sur le choix des races et des classes, reportez-vous Ã  :</p>
            <ul>
                <li><a href="http://documents.karl-pineau.fr/d&d/" target="_blank">la documentation de Donjons et Dragons</a></li>
                <li><a href="{{ path('pm_help_public_home') }}" target="_blank">l'aide du jeu</a></li>
            </ul>
        </div>
    </aside>
</div>
{% endblock %}
    
{% block javascripts_block %}
    {% javascripts  '@DnDInstanceCharacterBundle/Resources/public/js/editCharacterUsed.js'  %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
