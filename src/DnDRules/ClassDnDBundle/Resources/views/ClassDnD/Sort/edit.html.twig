{# src/DnDRules/ClassDnDBundle/Resources/views/ClassDnD/register.html.twig #}
 
{% extends "DnDRulesClassDnDBundle:ClassDnD:layout.html.twig" %}

{% block title %}
    Sorts - {{ parent() }}
{% endblock %}
    
{% block h1 %}
    Sorts
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li><a href="{{ path('dndrules_classdnd_classdnd_view', {'slug': classDnD.slug}) }}">{{classDnD.name}}</a></li>
    <li class="active">Sorts</li>
{% endblock %} 

{% block PM_body %}
<div class="row">
    <section id="content" class="col-lg-12">
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="alert alert-success">
                {{ flashMessage }}
            </div>
        {% endfor %}

        <div class="col-sm-12">
            <div class="well">
                {% include "DnDRulesClassDnDBundle:ClassDnD:Sort/edit_content.html.twig" %}
            </div>
        </div>
    </section>
</div>
{% endblock %}

{% block javascripts_block %}
    {% javascripts  '@DnDRulesClassDnDBundle/Resources/public/js/classdnd_editSort.js'  %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}