{# src/DnDRules/GiftBundle/Resources/views/Gift/view.html.twig #}
 
{% extends "DnDRulesGiftBundle:Gift:layout.html.twig" %}

{% block title %}
    {{ gift.name }} - {{ parent() }}
{% endblock %}
    
{% block h1 %}
    {{ gift.name }} :
{% endblock %}
    
{% block h1_extend %}
    {% if is_granted('ROLE_ADMIN') %}
    <a class="btn btn-lg btn-primary" href="{{ path('dndrules_gift_gift_edit', {'slug': gift.slug}) }}" >Modifier</a>
    <a class="btn btn-lg btn-danger main-JS-delete" href="{{ path('dndrules_gift_gift_delete', {'slug': gift.slug}) }}" >Supprimer</a>
    {% endif %}
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active">{{gift.name}}</li>
    <li class="active">Voir</li>
{% endblock %} 

{% block PM_body %}
<div class="row">
    <section id="content" class="col-lg-12">
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="alert alert-success">
                {{ flashMessage }}
            </div>
        {% endfor %}
        
        <div class="row">
            <div class="col-md-6">
                {% if gift.description is not empty %}
                    <div class="well">
                        {{ gift.description|raw }}
                    </div>
                {% else %}
                    <div class="alert alert-warning" role="alert">Aucune description fournie pour ce don.</div>
                {% endif %}
            </div>
            <div class="col-md-6">
                <h2>Informations :</h2>
                <ul>
                    <li>A venir</li>
                </ul>
            </div>
        </div>
    </section>
</div>
{% endblock %}