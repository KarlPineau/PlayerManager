{# src/DnDRules/AlignmentBundle/Resources/views/Alignement/index.html.twig #}
 
{% extends "DnDRulesAlignmentBundle:Alignment:layout.html.twig" %}

{% block title %}
    {{ parent() }}
{% endblock %} 
    
{% block h1 %}
    Alignements
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
{% endblock %}

{% block h1_extend %}
    {% if is_granted('ROLE_ADMIN') %}
        <a class="btn btn-primary" href="{{ path('dndrules_alignment_alignment_insert') }}"><i class="fa fa-plus" aria-hidden="true"></i></a>
    {% endif %}
{% endblock %}
    
{% block PM_body %}
<div class="row">
    <section class="col-lg-12">
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="alert col-lg-7 alert-success">
                {{ flashMessage }}
            </div>
        {% endfor %}
        
        <table class="table table-striped" style="width: 100%">
            <tr>
                <th style="max-width: 30px;">#</th>
                <th style="text-align: left;">Nom</th>
            </tr>
            {% for alignment in listAlignments %}
                <tr>
                    <td style="text-align: left;">{{ loop.index }}</td>
                    <td style="text-align: left;"><a href="{{ path('dndrules_alignment_alignment_view', { 'slug' : alignment.slug} ) }}">{{ alignment.name }}</a></td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" style="text-align: center; font-weight: bold;">Aucun alignement connu.</td>
                </tr>
            {% endfor %}
        </table>
    </section>
</div>
{% endblock %}