{# src/DnDRules/ArmorBundle/Resources/views/Armor/view.html.twig #}
 
{% extends "DnDRulesArmorBundle:Armor:layout.html.twig" %}

{% block title %}
    {{ armor.name }} - {{ parent() }}
{% endblock %}
    
{% block h1 %}
    {{ armor.name }} :
{% endblock %}
    
{% block h1_extend %}
    {% if is_granted('ROLE_ADMIN') %}
    <a class="btn btn-lg btn-primary" href="{{ path('dndrules_armor_armor_edit', {'slug': armor.slug}) }}" >Modifier</a>
    <a class="btn btn-lg btn-danger main-JS-delete" href="{{ path('dndrules_armor_armor_delete', {'slug': armor.slug}) }}" >Supprimer</a>
    {% endif %}
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active">{{armor.name}}</li>
    <li class="active">Voir</li>
{% endblock %} 

{% block PM_body %}
<div class="row">
    <section id="content" class="col-lg-12">
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="alert alert-success">
                {{ flashMessage }}
            </div>
        {% endfor %}
        
        <div class="row">
            <div class="col-md-6">
                {% if armor.description is not empty %}
                    <div class="well">
                        {{ armor.description|raw }}
                    </div>
                {% else %}
                    <div class="alert alert-warning" role="alert">Aucune description fournie pour ce armure.</div>
                {% endif %}
            </div>
            <div class="col-md-6">
                <h2>Informations :</h2>
                <ul>
                    <li>Prix : {% if armor.price is not empty %}{{armor.price}}{% endif %}</li>
                    <li>Type : {% if armor.type is not empty %}{{armor.type.name}}{% endif %}</li>
                    <li>Bonus d'Armure : {% if armor.bonus is not empty %}{{armor.bonus}}{% endif %}</li>
                    <li>Bonus de dextérité maximal : {% if armor.dexterityBonus is not empty %}{{armor.dexterityBonus}}{% endif %}</li>
                    <li>Malus d'armure aux tests : {% if armor.testMalus is not empty %}{{armor.testMalus}}{% endif %}</li>
                    <li>Risque d'échec des sorts profanes : {% if armor.failRisks is not empty %}{{armor.failRisks}}%{% endif %}</li>
                    <li>Vitesse de déplacement (M) : {% if armor.speedM is not empty %}{{armor.speedM}}{% endif %}</li>
                    <li>Vitesse de déplacement (P) : {% if armor.speedP is not empty %}{{armor.speedP}}{% endif %}</li>
                    <li>Poids : {% if armor.weight is not empty %}{{armor.weight}}{% endif %}</li>
                </ul>
            </div>
        </div>
    </section>
</div>
{% endblock %}