{# src/DnDRules/CharacterBundle/Resources/views/Race/register_content.html.twig #}

<form class="form-horizontal" method="post" action="{{ path('dndrules_race_race_edit_st', {'id': race.id}) }}" {{ form_enctype(form) }} role="form">
    {% if not form.vars.valid %}
    <div class="alert alert-error">
        <strong>Votre formulaire contient les erreurs suivantes :</strong>
        {{ form_errors(form) }}
        {{ form_errors(form.fortitude) }}
        {{ form_errors(form.reflex) }}
        {{ form_errors(form.will) }}
        {{ form_errors(form.specificity) }}
    </div>
    <br />
    {% endif %}

    <fieldset>
        <legend>Jets de Sauvegarde :</legend>

        <div class="form-group">
            {{ form_label(form.fortitude, "Réflexe :", {'label_attr': {'class': 'col-md-3 control-label'}}) }}
            <div class="col-md-9">
                {{ form_widget(form.fortitude, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.reflex, "Vigueur :", {'label_attr': {'class': 'col-md-3 control-label'}}) }}
            <div class="col-md-9">
                {{ form_widget(form.reflex, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.will, "Volonté :", {'label_attr': {'class': 'col-md-3 control-label'}}) }}
            <div class="col-md-9">
                {{ form_widget(form.will, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </fieldset>

    <fieldset>
        <legend>Particularités :</legend>

        <div class="form-group">
            {{ form_label(form.specificity, "Détaillez ici les particularités de la race liées aux JdS :", {'label_attr': {'class': 'col-md-3 control-label'}}) }}
            <div class="col-md-9">
                {{ form_widget(form.specificity, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </fieldset>
        <br />
    {{ form_rest(form) }}
    <div class="text-center"><input type="submit" class="btn btn-primary" /></div>
</form>