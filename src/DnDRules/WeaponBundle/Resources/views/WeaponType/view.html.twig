{# src/DnDRules/WeaponBundle/Resources/views/WeaponType/view.html.twig #}
 
{% extends "DnDRulesWeaponBundle:WeaponType:layout.html.twig" %}

{% block title %}
    {{ weapontype.name }} - {{ parent() }}
{% endblock %}
    
{% block h1 %}
    {{ weapontype.name }} :
{% endblock %}
    
{% block h1_extend %}
    {% if is_granted('ROLE_ADMIN') %}
    <a class="btn btn-lg btn-primary" href="{{ path('dndrules_weapon_weapontype_edit', {'slug': weapontype.slug}) }}" >Modifier</a>
    <a class="btn btn-lg btn-danger main-JS-delete" href="{{ path('dndrules_weapon_weapontype_delete', {'slug': weapontype.slug}) }}" >Supprimer</a>
    {% endif %}
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active">{{weapontype.name}}</li>
    <li class="active">Voir</li>
{% endblock %} 

{% block PM_body %}
<div class="row">
    <section id="content" class="col-lg-12">
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="alert alert-success">
                {{ flashMessage }}
            </div>
        {% endfor %}
        
        <div class="row">
            <div class="col-md-6">
                
            </div>
            <div class="col-md-6">
                <h2>Informations :</h2>
                <ul>
                    <li>A venir</li>
                </ul>
            </div>
        </div>
    </section>
</div>
{% endblock %}