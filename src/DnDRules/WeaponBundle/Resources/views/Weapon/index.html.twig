{# src/DnDRules/WeaponBundle/Resources/views/Weapon/index.html.twig #}
 
{% extends "DnDRulesWeaponBundle:Weapon:layout.html.twig" %}

{% block title %}
    {{ parent() }}
{% endblock %} 
    
{% block h1 %}
    Armes
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
{% endblock %}

{% block h1_extend %}
    {% if is_granted('ROLE_ADMIN') %}
        <a class="btn btn-primary" href="{{ path('dndrules_weapon_weapon_insert') }}"><i class="fa fa-plus" aria-hidden="true"></i></a>
    {% endif %}
{% endblock %}
    
{% block PM_body %}
<div class="row">
    <section class="col-lg-12">
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="alert col-lg-7 alert-success">
                {{ flashMessage }}
            </div>
        {% endfor %}

        <table class="table table-striped" style="width: 100%">
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Type</th>
            </tr>
            {% for weapon in listWeapons %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td><a href="{{ path('dndrules_weapon_weapon_view', { 'slug' : weapon.slug} ) }}">{{ weapon.name }}</a></td>
                    <td>{{ weapon.weaponType.name }}</td>
                </tr>
            {% else %}
                <tr>
                    <th colspan="5" class="text-center">Aucune Arme connue.</th>
                </tr>
            {% endfor %}
        </table>
    </section>
</div>
{% endblock %}