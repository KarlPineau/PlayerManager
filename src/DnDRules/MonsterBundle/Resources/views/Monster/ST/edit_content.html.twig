{# src/DnDRules/MonsterBundle/Resources/views/Monster/register_content.html.twig #}

<form class="form-horizontal" method="post" {{ form_enctype(form) }} role="form">
    {% if not form.vars.valid %}
    <div class="alert alert-error">
        <strong>Votre formulaire contient les erreurs suivantes :</strong>
        {{ form_errors(form) }}
        {{ form_errors(form.fortitude) }}
        {{ form_errors(form.reflex) }}
        {{ form_errors(form.will) }}
    </div>
    <br />
    {% endif %}

    <fieldset>
        <legend>Jets de Sauvegarde :</legend>

        <div class="form-group">
            <div class="col-md-3 control-label">
                {{ form_label(form.fortitude, "Réflexe :", {'label_attr': {'class': 'control-label'}}) }}
            </div>
            <div class="col-md-9">
                {{ form_widget(form.fortitude, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-3 control-label">
                 {{ form_label(form.reflex, "Vigueur :", {'label_attr': {'class': 'control-label'}}) }}
            </div>
            <div class="col-md-9">
                {{ form_widget(form.reflex, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-3 control-label">
                {{ form_label(form.will, "Volonté :", {'label_attr': {'class': 'control-label'}}) }}
            </div>
            <div class="col-md-9">
                {{ form_widget(form.will, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </fieldset>
        <br />
    {{ form_rest(form) }}
    <div class="text-center"><input type="submit" class="btn btn-primary" /></div>
</form>