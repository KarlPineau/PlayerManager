{# src/DnDRules/EquipmentBundle/Resources/views/Equipment/view.html.twig #}
 
{% extends "DnDRulesEquipmentBundle:Equipment:layout.html.twig" %}

{% block title %}
    {{ equipment.name }} - {{ parent() }}
{% endblock %}
    
{% block h1 %}
    {{ equipment.name }} :
{% endblock %}
    
{% block h1_extend %}
    {% if is_granted('ROLE_ADMIN') %}
    <a class="btn btn-lg btn-primary" href="{{ path('dndrules_equipment_equipment_edit', {'slug': equipment.slug}) }}" >Modifier</a>
    <a class="btn btn-lg btn-danger main-JS-delete" href="{{ path('dndrules_equipment_equipment_delete', {'slug': equipment.slug}) }}" >Supprimer</a>
    {% endif %}
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active">{{equipment.name}}</li>
    <li class="active">Voir</li>
{% endblock %} 

{% block PM_body %}
<div class="row">
    <section id="content" class="col-lg-12">
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="alert alert-success">
                {{ flashMessage }}
            </div>
        {% endfor %}
        
        <div class="row">
            <div class="col-md-6">
                {% if equipment.description is not empty %}
                    <div class="well">
                        {{ equipment.description|raw }}
                    </div>
                {% else %}
                    <div class="alert alert-warning" role="alert">Aucune description fournie pour cet Ã©quipement.</div>
                {% endif %}
            </div>
            <div class="col-md-6">
                <h2>Informations :</h2>
                <ul>
                    <li>Prix : {% if equipment.price is not empty %}{{equipment.price}}{% endif %}</li>
                    <li>Poids : {% if equipment.weight is not empty %}{{equipment.weight}}{% endif %}</li>
                </ul>
            </div>
        </div>
    </section>
</div>
{% endblock %}