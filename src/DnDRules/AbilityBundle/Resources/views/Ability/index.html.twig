{# src/DnDRules/AbilityBundle/Resources/views/Ability/index.html.twig #}
 
{% extends "DnDRulesAbilityBundle:Ability:layout.html.twig" %}

{% block title %}
    Caractéristiques - {{ parent() }}
{% endblock %} 
    
{% block h1 %}
    Caractéristiques
{% endblock %}

{% block h1_extend %}
    {% if is_granted('ROLE_ADMIN') %}<a class="btn btn-primary" href="{{ path('dndrules_ability_ability_insert') }}"><i class="fa fa-plus" aria-hidden="true"></i></a>{% endif %}
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
{% endblock %}    
    
{% block PM_body %}
<div class="row">
    <section class="col-lg-12">
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="alert col-lg-7 alert-success">
                {{ flashMessage }}
            </div>
        {% endfor %}
        
        <table class="table table-striped" style="width: 100%">
            <tr>
                <th style="max-width: 30px;">#</th>
                <th style="text-align: left;">Nom</th>
            </tr>
            {% for ability in listAbilities %}
                <tr>
                    <td style="text-align: left;">{{ loop.index }}</td>
                    <td style="text-align: left;"><a href="{{ path('dndrules_ability_ability_view', { 'slug' : ability.slug} ) }}">{{ ability.name }}</a></td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" style="text-align: center; font-weight: bold;">Aucune caractéristique connue.</td>
                </tr>
            {% endfor %}
        </table>
    </section>
</div>
{% endblock %}