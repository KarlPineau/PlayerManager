{# src/DnDRules/AbilityBundle/Resources/views/Ability/register.html.twig #}
 
{% extends "DnDRulesAbilityBundle:Ability:layout.html.twig" %}

{% block title %}
    Insertion - {{ parent() }}
{% endblock %}
    
{% block h1 %}
    Nouvelle Caractéristique
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active">Insertion</li>
{% endblock %} 

{% block PM_body %}
<div class="row">
    <section id="content" class="col-lg-8">
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="alert alert-success">
                {{ flashMessage }}
            </div>
        {% endfor %}
        
        <div class="well">
            {% include "DnDRulesAbilityBundle:Ability:Register/register_content.html.twig" %}
        </div>
    </section>
    <aside class="col-lg-4">
        Ici, contrôle live des infos ?
    </aside>
</div>
{% endblock %}
    
{% block javascripts_block %}
    {% javascripts  '@DnDRulesAbilityBundle/Resources/public/js/*'  %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
