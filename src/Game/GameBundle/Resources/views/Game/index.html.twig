{# src/Game/GameBundle/Resources/views/Game/index.html.twig #}
 
{% extends "GameGameBundle:Game:layout.html.twig" %}

{% block title %}
    Accueil - {{ parent() }}
{% endblock %} 
    
{% block h1 %}
    Parties
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
{% endblock %}

{% block h1_extend %}
    {% if is_granted("ROLE_ADMIN") %}<a href="{{ path('game_game_game_insert') }}" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Cr√©er</a>{% endif %}
{% endblock %}
    
{% block PM_body %}
<div class="row">
    <section class="col-xs-12">
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="alert col-sm-12 alert-success">
                {{ flashMessage }}
            </div>
        {% endfor %}

        <table class="table table-striped" style="width: 100%">
            <tr>
                <th style="max-width: 30px;">#</th>
                <th style="text-align: left;">Nom</th>
            </tr>
            {% for game in listGames %}
                <tr>
                    <td style="text-align: left;">{{ loop.index }}</td>
                    <td style="text-align: left;"><a href="{{ path('game_game_game_view', { 'slug' : game.slug} ) }}">{{ game.name }}</a></td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" style="text-align: center; font-weight: bold;">Aucune partie connu.</td>
                </tr>
            {% endfor %}
        </table>
    </section>
</div>
{% endblock %}