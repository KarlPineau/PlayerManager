{# src/Game/GameBundle/Resources/views/Game/layoutAdmin.html.twig #}

{% if is_granted("ROLE_ADMIN") %}
    {% set extends = "::admin.html.twig" %}
{% else %}
    {% set extends = "::public.html.twig" %}
{% endif %}
{% extends extends %}

{% block title %}
    Parties - {{ parent() }}
{% endblock %}

{% block follow %}
    <meta name="robots" content="noindex,nofollow" />
{% endblock %}
    
{% block breadcrumb %}
    {{ parent() }}
    {% if app.request.get('_route') == 'game_game_game_home' %}
        <li class="active">Parties</li>
    {% else %}
        <li><a href="{{ path('game_game_game_home') }}">Parties</a></li>
    {% endif %}
{% endblock %}

{% block body %}
    {% block PM_body %}
    {% endblock %}
{% endblock %}
